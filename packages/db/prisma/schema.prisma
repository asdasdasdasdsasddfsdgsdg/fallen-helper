// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  discordId String   @unique
  name      String?
  image     String?
  
  createdEvents Event[]
  signups       Signup[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  channelId   String?  // Discord channel ID
  messageId   String?  // Discord message ID
  
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])

  signups     Signup[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Signup {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  role      String?  // e.g. Tank, Healer, DPS, or specific class
  status    String   @default("CONFIRMED") // CONFIRMED, TENTATIVE, ABSENT

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, userId])
}

model PendingAction {
  id        String   @id @default(cuid())
  type      String   // CREATE_EVENT, UPDATE_EVENT, DELETE_EVENT
  payload   String   // JSON string of data
  status    String   @default("PENDING") // PENDING, PROCESSING, DONE, FAILED
  
  result    String?  // JSON string of result (e.g. messageId)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guild {
id String @id
name String
icon String?
channels Channel[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}

model Channel {
id String @id
name String
type String
guildId String
guild Guild @relation(fields: [guildId], references: [id], onDelete: Cascade)
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
